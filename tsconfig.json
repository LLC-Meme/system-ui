		"moduleResolution": "node",
    "esModuleInterop": true,
		"declaration": true,
    "strict": true,
		"outDir": "dist",
		"jsx": "react",
    "skipLibCheck": true
  },
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}